# Firebase Configuration
# Option 1: Using Service Account File (Recommended)
FIREBASE_CREDENTIALS_PATH=path/to/serviceAccountKey.json

# Option 2: Using Application Default Credentials (Cloud environment)
# Leave FIREBASE_CREDENTIALS_PATH empty and ensure ADC is configured

# Model Configuration
MODEL_TYPE=xgboost
TARGET_WINDOW_DAYS=30
PREDICTION_CONFIDENCE_THRESHOLD=0.6

# Retraining Configuration
RETRAIN_FREQUENCY_DAYS=7
MIN_SAMPLES_FOR_TRAINING=100

# Notification Thresholds
CRITICAL_RISK_THRESHOLD=0.8
HIGH_RISK_THRESHOLD=0.6
MEDIUM_RISK_THRESHOLD=0.4

# API Configuration
API_HOST=0.0.0.0
API_PORT=5000


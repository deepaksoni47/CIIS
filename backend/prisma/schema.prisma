// This is your Prisma schema file
// Learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["postgresqlExtensions"]
}

datasource db {
  provider   = "postgresql"
  url        = env("DATABASE_URL")
  extensions = [postgis]
}

enum IssueCategory {
  WATER
  ELECTRICITY
  WIFI
  SANITATION
  CROWDING
  TEMPERATURE
  OTHER
}

enum IssueStatus {
  OPEN
  IN_PROGRESS
  RESOLVED
  CLOSED
}

model Building {
  id          String    @id @db.VarChar(50)
  name        String    @db.VarChar(255)
  latitude    Float
  longitude   Float
  address     String?   @db.Text
  buildingType String?  @map("building_type") @db.VarChar(50)
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")
  
  issues      Issue[]
  riskScores  RiskScore[]

  @@map("buildings")
}

model Issue {
  id          String        @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  category    IssueCategory
  latitude    Float
  longitude   Float
  severity    Int           @db.Integer
  status      IssueStatus   @default(OPEN)
  description String?       @db.Text
  buildingId  String?       @map("building_id") @db.VarChar(50)
  reportedBy  String?       @map("reported_by") @db.VarChar(255)
  assignedTo  String?       @map("assigned_to") @db.VarChar(255)
  createdAt   DateTime      @default(now()) @map("created_at")
  updatedAt   DateTime      @updatedAt @map("updated_at")
  resolvedAt  DateTime?     @map("resolved_at")
  metadata    Json?

  building    Building?     @relation(fields: [buildingId], references: [id])
  history     IssueHistory[]

  @@index([category])
  @@index([status])
  @@index([severity])
  @@index([createdAt])
  @@index([buildingId])
  @@map("issues")
}

model IssueHistory {
  id         String   @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  issueId    String   @map("issue_id") @db.Uuid
  fieldName  String   @map("field_name") @db.VarChar(50)
  oldValue   String?  @map("old_value") @db.Text
  newValue   String?  @map("new_value") @db.Text
  changedBy  String?  @map("changed_by") @db.VarChar(255)
  changedAt  DateTime @default(now()) @map("changed_at")

  issue      Issue    @relation(fields: [issueId], references: [id], onDelete: Cascade)

  @@index([issueId])
  @@index([changedAt])
  @@map("issue_history")
}

model Zone {
  id         String      @id @db.VarChar(50)
  name       String      @db.VarChar(255)
  // Note: PostGIS geometry stored as raw SQL
  zoneType   String?     @map("zone_type") @db.VarChar(50)
  createdAt  DateTime    @default(now()) @map("created_at")
  updatedAt  DateTime    @updatedAt @map("updated_at")
  
  riskScores RiskScore[]

  @@map("zones")
}

model RiskScore {
  id                    String         @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  zoneId                String?        @map("zone_id") @db.VarChar(50)
  buildingId            String?        @map("building_id") @db.VarChar(50)
  category              IssueCategory?
  riskScore             Decimal        @map("risk_score") @db.Decimal(5, 2)
  recurrenceProbability Decimal?       @map("recurrence_probability") @db.Decimal(5, 4)
  issueCount            Int            @default(0) @map("issue_count")
  avgSeverity           Decimal?       @map("avg_severity") @db.Decimal(3, 2)
  calculatedAt          DateTime       @default(now()) @map("calculated_at")

  zone                  Zone?          @relation(fields: [zoneId], references: [id], onDelete: Cascade)
  building              Building?      @relation(fields: [buildingId], references: [id], onDelete: Cascade)

  @@index([zoneId])
  @@index([buildingId])
  @@index([category])
  @@index([calculatedAt])
  @@map("risk_scores")
}

model AIInsight {
  id              String   @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  query           String   @db.Text
  insight         String   @db.Text
  recommendations Json?
  dataPoints      Json?    @map("data_points")
  generatedBy     String   @default("gemini") @map("generated_by") @db.VarChar(50)
  createdAt       DateTime @default(now()) @map("created_at")

  @@index([createdAt])
  @@map("ai_insights")
}

model Report {
  id          String    @id @db.VarChar(50)
  reportType  String    @map("report_type") @db.VarChar(50)
  title       String    @db.VarChar(255)
  summary     String?   @db.Text
  content     Json
  startDate   DateTime? @map("start_date") @db.Date
  endDate     DateTime? @map("end_date") @db.Date
  generatedAt DateTime  @default(now()) @map("generated_at")

  @@index([reportType])
  @@index([generatedAt])
  @@map("reports")
}

model User {
  id          String    @id @db.VarChar(255)
  email       String    @unique @db.VarChar(255)
  displayName String?   @map("display_name") @db.VarChar(255)
  role        String    @default("user") @db.VarChar(50)
  createdAt   DateTime  @default(now()) @map("created_at")
  lastLogin   DateTime? @map("last_login")

  @@index([email])
  @@index([role])
  @@map("users")
}
